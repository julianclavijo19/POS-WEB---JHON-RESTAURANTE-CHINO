# Supabase (mismas credenciales del proyecto)
NEXT_PUBLIC_SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key

# ══════════════════════════════════════════════════════
# MÉTODO DE CONEXIÓN (elegir UNO)
# ══════════════════════════════════════════════════════

# OPCIÓN A - Puerto COM directo (RECOMENDADO - más estable)
# El script mantiene el puerto ABIERTO permanentemente (sin abrir/cerrar cada vez)
# Ejecutar: node list-printers.js o ver Administrador de dispositivos para encontrar el puerto
CASH_DRAWER_COM_PORT=COM3

# OPCIÓN B - Nombre de impresora Windows (fallback si COM no funciona)
# Ejecutar: node list-printers.js para ver impresoras disponibles
# CASH_DRAWER_PRINTER_NAME=POS-80C

# ══════════════════════════════════════════════════════
# CONFIGURACIÓN AVANZADA (valores por defecto suelen funcionar)
# ══════════════════════════════════════════════════════

# Intervalo de polling en ms (default: 2000)
POLL_INTERVAL_MS=2000

# Reintentos al abrir cajón (default: 5)
CASH_DRAWER_MAX_RETRIES=5

# Pausa entre reintentos en ms (default: 1500)
CASH_DRAWER_RETRY_DELAY_MS=1500

# Ventana de deduplicación en ms (ignora aperturas duplicadas dentro de esta ventana)
# Evita que el cajón se abra 2 veces por el mismo pago (default: 3000)
CASH_DRAWER_DEDUP_MS=3000

# Baud rate del puerto serial (default: 9600 - no cambiar salvo que sepas qué haces)
CASH_DRAWER_BAUD_RATE=9600
