# Supabase (mismas credenciales del proyecto)
NEXT_PUBLIC_SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key

# OPCIÓN A - Puerto COM directo (más estable, recomendado)
# Si la impresora está en COM3: CASH_DRAWER_COM_PORT=COM3
CASH_DRAWER_COM_PORT=

# OPCIÓN B - Nombre de impresora Windows (si no usas COM)
# Ejecutar: node list-printers.js para ver impresoras
CASH_DRAWER_PRINTER_NAME=

# Intervalo de polling en ms (default: 3000)
POLL_INTERVAL_MS=3000

# Reintentos al abrir cajón (default: 5)
CASH_DRAWER_MAX_RETRIES=5
# Pausa entre reintentos en ms (default: 1000)
CASH_DRAWER_RETRY_DELAY_MS=1000
# Pin ESC/POS: 0 (pin 2), 1 (pin 5), o both (probar ambos si falla)
CASH_DRAWER_PIN=0
